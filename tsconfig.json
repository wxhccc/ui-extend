{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "lib": ["esnext", "dom"],
    "types": ["@vuepress/client", "node"]
  },
  "exclude": ["node_modules", "lib", "config"],
  "include": ["typings/*.ts", "components/**/*"]
}